html {
    background-color: rgb(60, 0, 0 )    color: aquamarine;
    color: #000;
    margin: 0;
    padding: 0;
}
body {
    margin: 0 auto;
    color: aquamarine;
    padding: 0;
        display: block;
    width: 1920px;
    height: 1080px;
        overflow: auto;
}
#header {
        width:100%;
        color: aquamarine;
        height: 100px;
        padding-left: 700px;
    font-size: 50px;
    float: left;
    background-color: rgb(60, 0, 0 )}
#left {
    width: 1920px;
    color: yellow;
    height: 50px;
    padding-left: 300px;
    font-size: 25px;
    float: top;
    overflow: hidden;
    background-color: rgb(60, 0, 0 )}
#right {
    width: 250px;
    color: lightblue;
    height: 720px;
    font-size: 25px;
    float: right;
    overflow: hidden;
    background-color: rgb(60, 0, 0 )}
#content {
    width: 1650px;
    color: yellow;
    float: left;
    overflow: hidden;
	font-size:2em;
    background-color: rgb(60, 0, 0 )}
#footer {
    clear: both;
    color: aquamarine;
    padding-left: 1400px;
    font-size: 50px;
    width: 100%;
    height: 100px;
    background-color: rgb(60, 0, 0 )}
